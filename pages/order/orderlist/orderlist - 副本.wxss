@import "./iconfont.wxss";

.listbox {
  width: 100%;
  height: auto;
  font-size: 15px;
}

.item {
  display: flex;
  flex-direction: row;
  margin: 5px;
  /* background-color: #dddd; */
  height: 50px;
  padding-bottom: 5px;
  border-bottom: 1px solid #e8e8e8;
  justify-content: space-between;
}

.icondate {
  height: 50px;
  width: 50px;
  font-size: 25px;
  line-height: 50px;
  text-align: center;
  background-color: #6cd9d9;
  color: #fff;
  margin-right: 10px;
  border-radius: 2px;
  flex-shrink: 0;
  flex-grow: 0;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.vip {
  /* background-color: #0084b4; 
